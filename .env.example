
# Server Configuration
# Port number for the server to listen on
PORT=8848

# Database Configuration
# MongoDB connection string - replace with your MongoDB instance
MONGODB_URI=mongodb://localhost:27017/atm_demo

# Security Configuration
# JWT secret key for signing tokens - use a strong, random string
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random

# Comma-separated list of allowed origins for CORS
# Example: http://localhost:5173, http://localhost:3000,https://yourdomain.com
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Set to 'production' for production deployment
NODE_ENV=development
